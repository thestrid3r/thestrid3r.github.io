---
import BaseLayout from '../components/BaseLayout.astro';
import SkillTag from '../components/SkillTag.astro';
import { site } from '../config/site';
---

<BaseLayout title="Skills - Ankit Kumar">
  <section class="max-w-5xl mx-auto py-12 font-sans antialiased">
    <h1 class="text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-purple-500 to-orange-400 mb-10 text-center drop-shadow-lg">Professional Expertise</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {Object.entries(site.skills).map(([category, skills]) => (
        <div class="rounded-2xl p-6 bg-white/60 dark:bg-gray-900/60 shadow-xl backdrop-blur-md border border-gray-200 dark:border-gray-800 transition-transform hover:scale-105 hover:shadow-2xl">
          <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
            <span>{category}</span>
          </h3>
          <div class="flex flex-wrap gap-3">
            {skills.map((skill) => (
              <SkillTag name={skill} />
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <script>
    import Alpine from 'alpinejs';
    window.Alpine = Alpine;
    Alpine.start();
  </script>
</BaseLayout> 