---
import BaseLayout from '../components/BaseLayout.astro';
import CV from '../components/CV.astro';
import { calculateTotalExperience } from '../utils/experience';
import { site } from '../config/site';

const experience = calculateTotalExperience();
---

<BaseLayout title="Ankit Kumar - Lead DevOps & Cloud Security Engineer">
  <section class="max-w-4xl mx-auto text-center space-y-16 antialiased bg-gradient-to-b from-slate-50/50 to-white/50 dark:from-slate-900/50 dark:to-slate-800/50 min-h-screen backdrop-blur-3xl font-sans">
    <div class="pt-20">
      <div class="w-32 h-32 mx-auto rounded-full border border-slate-200/50 dark:border-slate-700/50 shadow-lg backdrop-blur-sm overflow-hidden">
        <img
          src="/avatar.jpg"
          alt="Ankit Kumar"
          width={128}
          height={128}
          class="w-full h-full object-cover object-center"
        />
      </div>
    </div>
    
    <div class="space-y-6">
      <h1 class="text-5xl font-light tracking-tight text-slate-900 dark:text-white font-sans">Ankit Kumar</h1>
      <p class="text-xl text-slate-600 dark:text-slate-300 font-normal tracking-wide font-sans">
        Lead DevOps & Cloud Security Engineer
      </p>
      <p class="text-lg text-slate-900 dark:text-white font-normal font-sans bg-gradient-to-r from-blue-50 to-slate-50 dark:from-blue-900/20 dark:to-slate-900/20 px-4 py-2 rounded-full inline-block border border-blue-100 dark:border-blue-800/30 shadow-sm">
        {site.availability}
      </p>
    </div>
    
    <div class="prose dark:prose-invert max-w-2xl mx-auto text-left space-y-8">
      <p class="text-xl leading-relaxed text-slate-600 dark:text-slate-300 font-light font-sans">
        I'm a DevOps engineer with {experience} of experience shaping cloud-native infrastructure, security-first architectures, and resilient DevOps ecosystems.
      </p>
      <p class="text-xl leading-relaxed text-slate-600 dark:text-slate-300 font-light font-sans">
        I have scaled secure, high-availability platforms across AWS and GCP, led Kubernetes-driven modernization initiatives, and architected compliant multi-cloud environments adhering to PCI DSS, ISO, and NIST standards.
      </p>
    </div>

    <div class="py-12">
      <h2 class="text-3xl font-light mb-12 text-slate-900 dark:text-white font-sans">What I Offer</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {site.services.map((service) => (
          <div class="bg-white/40 dark:bg-slate-800/40 backdrop-blur-xl p-8 rounded-2xl border border-slate-200/30 dark:border-slate-700/30 hover:shadow-2xl hover:border-slate-300/50 dark:hover:border-slate-600/50 transition-all duration-300 group">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0 w-14 h-14 bg-gradient-to-br from-slate-50/50 to-slate-100/50 dark:from-slate-700/50 dark:to-slate-800/50 rounded-xl flex items-center justify-center group-hover:from-slate-100/70 group-hover:to-slate-200/70 dark:group-hover:from-slate-600/70 dark:group-hover:to-slate-700/70 transition-colors backdrop-blur-sm">
                {service.title.includes("Kubernetes") && (
                  <svg class="w-7 h-7 text-slate-600 dark:text-slate-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0L1.608 6v12L12 24l10.392-6V6L12 0zm-1.073 1.445h.001a1.8 1.8 0 002.138 0l7.534 4.35a1.794 1.794 0 000 .403l-7.535 4.35a1.8 1.8 0 00-2.137 0l-7.536-4.35a1.795 1.795 0 000-.402l7.536-4.35zM21.324 7.4c.109.08.226.147.349.201v8.7a1.8 1.8 0 00-1.069 1.852l-7.535 4.35a1.8 1.8 0 00-.349-.2l-.009-8.653a1.8 1.8 0 001.07-1.851l7.535-4.35zm-18.648.048l7.535 4.35a1.8 1.8 0 001.069 1.852v8.7c-.124.054-.24.122-.349.202l-7.535-4.35a1.8 1.8 0 00-1.069-1.852v-8.7c.124-.054.24-.122.35-.202z"/>
                  </svg>
